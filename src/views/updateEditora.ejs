			<h2 class="upd-title">Atualizar Livro</h2>
			<form
				class="upd-form"
				action="/updateEditora/<%= editora.id %>"
				method="POST"
			>
				<label class="upd-label" for="titulo">
					<strong>Nome Fantasia</strong>
					<input
						class="upd-input"
						type="text"
						name="titulo"
						id="titulo"
						value="<%= editora.nomeFantasia %>"
					/>
				</label>

				<label class="upd-label" for="autor">
					<strong>Local de Origem</strong>
					<input
						class="upd-input"
						type="text"
						name="autor"
						id="autor"
						value="<%= editora.localDeOrigem %>"
					/>
				</label>

